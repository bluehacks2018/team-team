<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.teamteam.blueboi.RequestInfoActivity"
    android:orientation="vertical"
    android:background="@color/colorGreyLighter">
    <TextView
        android:id="@+id/tv_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:textSize="15dp"
        android:text="Description"/>
    <TextView
        android:layout_marginTop="15dp"
        android:id="@+id/tv_datetime"
        android:textSize="15dp"
        android:layout_width="match_parent"
        android:background="@color/colorWhite"
        android:layout_height="wrap_content"
        android:text="Date and Time"/>
    <TextView
        android:id="@+id/tv_tags"
        android:textSize="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:text="Tag"/>
    <TextView
        android:layout_width="match_parent"
        android:textSize="15dp"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:text="Worker Assigned"/>
    <LinearLayout
        android:id="@+id/worker_info"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_worker_img"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@mipmap/ic_launcher_round"/>
        <LinearLayout
            android:layout_marginLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_worker_name"
                android:textSize="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"/>
            <TextView
                android:id="@+id/tv_worker_rating"
                android:layout_width="wrap_content"
                android:textSize="15dp"
                android:layout_height="wrap_content"
                android:text="Rating"/>
            <TextView
                android:id="@+id/tv_worker_completed"
                android:layout_width="wrap_content"
                android:textSize="15dp"
                android:layout_height="wrap_content"
                android:text="Total jobs completed"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_worker_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:text="Skillset"/>
    <RelativeLayout
        android:id="@+id/rl_skillset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></RelativeLayout>
    <Button
        android:layout_marginTop="15dp"
        android:id="@+id/button_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorNo"
        android:textColor="@color/colorWhite"
        android:text="Cancel"/>
</LinearLayout>
